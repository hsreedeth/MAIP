  "race_other": "Race: Other/Unknown (1=yes).",

  "income": {
    "display_name": "Household income bracket",
    "scale": {
      "1": "under $11k",
      "2": "$11–$25k",
      "3": "$25–$50k",
      "4": ">$50k"
    }
  },

  "edu": {
    "display_name": "Education",
    "units": "years",
    "notes": "Years of formal education."
